@model BankDKI.Models.CreditRatingHistoryModel

@using (Html.BeginForm("SaveCreditAnalysisReport", "CreditAnalysis", FormMethod.Post))
{   
    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.UserId)
    <div id="creditAnalysisReport" class="hide">
        <h3>Credit Analysis Report</h3>
        <div>
            <div class="credit-rating-report bordered contentPadding">
                <h1>Where you Stand</h1>
                <span>Your Credit Rating Score</span>
                <span>AA</span>
                <span>On May 10, 2016</span>
            </div>
            <div class="credit-description bordered">
                <span>Description</span>
                @Html.TextAreaFor(m => m.Description, new { @readonly="readonly"})
                <hr />
                <div class="btn-edit-save">
                    <a href="#" class="btnEdit"><span class="glyphicon  glyphicon-edit"></span></a>
                    <a href="#" class="btnSave hide"><span class="glyphicon  glyphicon-save"></span></a>
                </div>
            </div>
        </div>
        <hr />
        <div>
            <div class="payment-history-report bordered contentPadding">
                <h5>Payment History</h5>
                <div><div>GOOD</div></div>
                @Html.TextAreaFor(m => m.PaymentHistory, new { @readonly="readonly" })
                <hr />
                <div class="btn-edit-save">
                    <a href="#" class="btnEdit"><span class="glyphicon  glyphicon-edit"></span></a>
                    <a href="#" class="btnSave hide"><span class="glyphicon  glyphicon-save"></span></a>
                </div>
            </div>
            <div class="amount-debit-report bordered contentPadding">
                <h5>Amount of Debit</h5>
                <div><div>NORMAL</div></div>
                @Html.TextAreaFor(m => m.AmountDebit, new { @readonly="readonly"})
                <hr />
                <div class="btn-edit-save">
                    <a href="#" class="btnEdit"><span class="glyphicon  glyphicon-edit"></span></a>
                    <a href="#" class="btnSave hide"><span class="glyphicon  glyphicon-save"></span></a>
                </div>
            </div>
            <div class="length-credit-history bordered contentPadding">
                <h5>Length of Credit History</h5>
                <div><div>EXCELLENT</div></div>
                @Html.TextAreaFor(m => m.LengthCrditHistory, new { @readonly="readonly"})
                <hr />
                <div class="btn-edit-save">
                    <a href="#" class="btnEdit"><span class="glyphicon  glyphicon-edit"></span></a>
                    <a href="#" class="btnSave hide"><span class="glyphicon  glyphicon-save"></span></a>
                </div>
            </div>
        </div>
        <div>
            @Html.TextAreaFor(m => m.Comments, new { @readonly="readonly",placeholder="Add additional comments here..."})
            <div class="btn-edit-save">
                <a href="#" class="btnEdit"><span class="glyphicon  glyphicon-edit"></span></a>
                <a href="#" class="btnSave hide"><span class="glyphicon  glyphicon-save"></span></a>
            </div>
        </div>
    </div>
}